TARGET = global_test
CC = gcc


TEST_HEADER_PREF = ./enemy_system/tests/test_units
LIB_TEST_PREF = ./enemy_system/tests
HEADER_PREF = ./enemy_system/src

${TARGET}: compileTests
	./${TARGET}

compileTests: buildTests
	${CC} ${TARGET}.c -I ${TEST_HEADER_PREF} -lTestEnemySystem -L ${LIB_TEST_PREF} -I ${HEADER_PREF} -lEnemySystem -L ./enemy_system -o ${TARGET}

buildTests:
	cd ./enemy_system/tests && make

clean:
	rm ${TARGET}
